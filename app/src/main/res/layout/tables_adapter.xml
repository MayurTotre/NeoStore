<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProduct"
        app:contentPadding="12dp"
        android:elevation="2dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivTables"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTablesHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="@string/tableHeading"
                android:textColor="@color/grey"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@id/ivTables"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tableProducer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text="Table Producer"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/ivTables"
                app:layout_constraintTop_toBottomOf="@id/tvTablesHeading" />

            <TextView
                android:id="@+id/tablePriceRS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text="RS."
                android:textColor="@color/darkRed"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@id/ivTables"
                app:layout_constraintTop_toBottomOf="@id/tableProducer" />

            <TextView
                android:id="@+id/tablePrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text="00000"
                android:textColor="@color/darkRed"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@id/tablePriceRS"
                app:layout_constraintTop_toBottomOf="@id/tableProducer" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>